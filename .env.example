# Email Configuration
TENDERSCAN_EMAIL_ENABLED=true
TENDERSCAN_SMTP_SERVER=smtp.gmail.com
TENDERSCAN_SMTP_PORT=587
TENDERSCAN_SMTP_USER=your-email@gmail.com
